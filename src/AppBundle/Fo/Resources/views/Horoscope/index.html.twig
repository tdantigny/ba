{% extends '::base.html.twig' %}

{% block body %}
    <section>
        <h1 class="title-section">L'horoscope <span>du jour</span></h1>

        {% for horoscope in horoscopes %}
            <article>
                <a href="{{ path('fo_horoscope_by_type', { type : horoscope.type }) }}">{{ horoscope.title | title }}</a>
            </article>
        {% endfor %}
    </section>
{% endblock %}