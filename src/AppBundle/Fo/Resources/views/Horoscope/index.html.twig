{% extends '::base.html.twig' %}

{% block body %}
    <section>
        <h1 class="title-section">L'horoscope <span>du jour</span></h1>

        {% for horoscope in horoscopes %}
            <article style="display: inline">
                <a href="{{ path('fo_horoscope_by_type', { type : horoscope.type }) }}">
                    <img style="width: 5%"  src="{{ asset('pictures/logo_horoscope/'~horoscope.primaryPicture) }}" alt="{{ horoscope.type }}">
                </a>
            </article>
        {% endfor %}
    </section>
{% endblock %}